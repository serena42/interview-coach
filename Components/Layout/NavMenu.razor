@rendermode InteractiveServer
@inject SessionService SessionService
@inject IJSRuntime JS
@using MiniProject_Take1.Services

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Interview Coach</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="star">
                <span class="bi bi-star-fill-nav-menu" aria-hidden="true"></span> STAR Practice
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="statements">
                <span class="bi bi-journal-text-nav-menu" aria-hidden="true"></span> My Statements
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <button class="nav-link btn btn-link" @onclick="ExportSession">
                <span class="bi bi-download-nav-menu" aria-hidden="true"></span> Export Session
            </button>
        </div>
    </nav>
</div>

@code {
    private async Task ExportSession()
    {
        var json = SessionService.ExportSession();
        var fileName = $"interview-session-{DateTime.Now:yyyy-MM-dd}.json";
        await JS.InvokeVoidAsync("downloadFile", fileName, json);
    }
}
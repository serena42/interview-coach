@rendermode InteractiveServer
@inject SessionService SessionService
@inject IJSRuntime JS
@using MiniProject_Take1.Services

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Interview Coach</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-box-arrow-in-right-nav-menu" aria-hidden="true"></span> Login
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard">
                <span class="bi bi-speedometer2-nav-menu" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="behavioral">
                <span class="bi bi-chat-square-text-nav-menu" aria-hidden="true"></span> Behavioral
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="technical">
                <span class="bi bi-cpu-nav-menu" aria-hidden="true"></span> Technical
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="coding">
                <span class="bi bi-code-slash-nav-menu" aria-hidden="true"></span> Coding
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="interview">
                <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Interview
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <button class="nav-link btn btn-link" @onclick="ExportSession">
                <span class="bi bi-download-nav-menu" aria-hidden="true"></span> Export Session
            </button>
        </div>
    </nav>
</div>

@code {
    private async Task ExportSession()
    {
        var json = SessionService.ExportSession();
        var fileName = $"interview-session-{DateTime.Now:yyyy-MM-dd}.json";
        await JS.InvokeVoidAsync("downloadFile", fileName, json);
    }
}